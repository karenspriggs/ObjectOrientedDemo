@model RepoViewModel

@{
    ViewData["Title"] = "Make Change Index";
}

<h1>View</h1>

<div>
    <h4>RepoViewModel</h4>
    <hr />
    <form method="post">
        <input type="text" id="Amount" name="Amount" value="0" /> <br/>
        <input type="submit" value="Submit" formaction="@Url.Action("Index")" formmethod="post" />
    </form>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TotalValue)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalValue)
        </dd>
        <dt class="col-sm-2">
            <p><b>Coins in this repo:</b></p>
        </dt>
        @foreach (var coin in Model.Coins)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => coin.Name)
                    @Html.DisplayFor(modelItem => coin.MonetaryValue)
                </td>

            </tr>
        }
        
    </dl>
</div>
